<AuthorizeView>
    <Authorized>
        <div class="navbar-nav ms-auto p-4 p-lg-0">
            <a href="" class="nav-item nav-link visually-hidden">Home</a>
            <a href="" class="nav-item nav-link">Inicio</a>

            <a href="events" class="nav-item nav-link">Eventos</a>
            @if (context.User.IsInRole("Admin") || context.User.IsInRole("Provider"))
            {
                <a href="reports" class="nav-item nav-link">Reportes</a>
                <a href="devices" class="nav-item nav-link">Dispositivos</a>
            }

            <a href="profile" class="nav-item nav-link">Perfil</a>
        </div>
        <a href="logout" class="btn btn-primary py-4 px-lg-4 rounded-0 d-none d-lg-block">
            Cerrar sesión
            <i class="fa fa-arrow-right ms-3"></i>
        </a>
    </Authorized>
    <NotAuthorized>
        <div class="navbar-nav ms-auto p-4 p-lg-0">
            <a href="" class="nav-item nav-link visually-hidden">Home</a>
            <a href="" class="nav-item nav-link">Inicio</a>
            <a href="register" class="nav-item nav-link">Registrarse</a>
        </div>
        <a href="login" class="btn btn-primary py-4 px-lg-4 rounded-0 d-none d-lg-block">
            Login
            <i class="fa fa-arrow-right ms-3"></i>
        </a>

    </NotAuthorized>
</AuthorizeView>
